{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,

    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },

    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "build"]
}
